#include <Servo.h>

Servo ESC;

int potValue;

void setup()
{
  ESC.attach(9, 1000, 2000);
}

void loop()
{
//test for whether the switch is high or low
//if switch is low, go to the manual control branch using the pot
//if switch is high, go to the auto control branch

  potValue = analogRead(A0);
  potValue = map(potValue, 0, 1023, 0, 180);
  ESC.write(potValue);
}

